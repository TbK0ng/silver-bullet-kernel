{
  "name": "java",
  "priority": 65,
  "detect": {
    "anyOfFiles": [
      "pom.xml",
      "build.gradle",
      "build.gradle.kts"
    ]
  },
  "implementation": {
    "pathPrefixes": [
      "src/",
      "test/",
      "tests/",
      "scripts/"
    ],
    "pathFiles": [
      "pom.xml",
      "build.gradle",
      "build.gradle.kts",
      "settings.gradle",
      "settings.gradle.kts"
    ]
  },
  "verify": {
    "fast": [
      "mvn -q -DskipTests compile"
    ],
    "full": [
      "mvn -q test"
    ],
    "ci": [
      "mvn -q verify"
    ]
  },
  "capabilities": {
    "semantic": {
      "rename": {
        "supported": true,
        "backend": "jdtls",
        "deterministic": true
      },
      "referenceMap": {
        "supported": false,
        "backend": "jdtls",
        "deterministic": false
      },
      "safeDeleteCandidates": {
        "supported": false,
        "backend": "jdtls",
        "deterministic": false
      }
    }
  },
  "sdk": {
    "source": "builtin",
    "validated": true,
    "validationStatus": "certified"
  }
}
